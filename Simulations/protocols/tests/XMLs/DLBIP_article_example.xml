<worldsens xmlns="http://worldsens.citi.insa-lyon.fr">
	<!--
	 == Worldsens =====================================================
	 -->
	<simulation nodes="8" duration="100s" x="100" y="100" z="0"/>
	<!--
	 == Entities ======================================================
	 -->
	<!--
	 == PROPAGATION, INTERFERENCES and MODULATION =====================
	 -->
	<entity name="range" library="propagation_range">
		<init range="12"/>
	</entity>
	<entity name="interf" library="interferences_none"></entity>
	<entity name="none" library="modulation_none"></entity>
	<!--
	 == RADIO and ANTENNA ============================================
	 -->
	<entity name="omnidirectionnal" library="antenna_omnidirectionnal">
		<default loss="0" angle-xy="random" angle-z="0"/>
	</entity>
	<entity name="radio" library="radio_half1d">
		<default sensibility="-92" T_b="727" dBm="10" channel="0" modulation="none"/>
	</entity>
	<!--
	 == MAC =====================================================
	 -->
	<entity name="mac" library="mac_macter">
		<init  debit="10" debug="0" alpha="4" c="100000"/>
		<default range ="12"/>
	</entity>
	<!--
	 == APPLICATION =====================================================
	 -->
	
	<entity name="app-sensor" library="application_broadcast">
		<init period="10s" debut="3s" debug="1"/>
		<default />
	</entity>
	<!--
	 == MOBILITY =====================================================
	 -->
	<entity name="static-pos" library="mobility_static">
		<default x="random" y="random" z="0.0"/>
	</entity>
	
	<!-- == ROUTING ========================================= -->
	<entity name="routing-dlbip" library="routing_dlbip">
		<init alpha="4" c="100000" eps="0.01" />
		<default />
	</entity>
	
	<!--
	 
	 == Energy =====================================================
	 -->
	<entity name="linear" library="energy_theorie">
		<default energy="1000000" rx="1"  tx="1" debug="1"/>
	</entity>
	
	<!--
	 == Environment =====================================================
	 -->
	<environment>
		<propagation entity="range" range="12"/>
		<interferences entity="interf"/>
		<modulation entity="none"/>
	</environment>
	<!--
	 == Bundle =====================================================
	 -->
	<bundle name="sensor" worldsens="false" default="true" birth="0">
		<mobility entity="static-pos"/>
		<energy entity="linear" />
		<antenna entity="omnidirectionnal">
			<up entity="radio"/>
		</antenna>
		
		<with entity="radio">
			<up entity="mac"/>
			<down entity="omnidirectionnal"/>
		</with>
		
		<with entity="mac">
			<up entity="routing-dlbip"/>
			<down entity="radio"/>
		</with>
		
		<with entity="routing-dlbip">
			<up entity="app-sensor"/>
			<down entity="mac"/>
		</with>
		
		<with entity="app-sensor">
			<down entity="routing-dlbip"/>
		</with>
	</bundle>
	
	<!--
	 == Nodes =====================================================
	 -->
	<node id="0" as="sensor">
		<for entity="static-pos" x="8" y="7" z="0" />
	</node>
	
	<node id="1" as="sensor">
		<for entity="static-pos" x="16" y="5" z="0" />
	</node>
	
	<node id="2" as="sensor">
		<for entity="static-pos" x="13" y="0" z="0" />
	</node>
	
	<node id="3" as="sensor">
		<for entity="static-pos" x="0" y="3" z="0" />
	</node>
	
	<node id="4" as="sensor">
		<for entity="static-pos" x="3" y="17" z="0" />
	</node>
	
	<node id="5" as="sensor">
		<for entity="static-pos" x="7" y="14" z="0" />
	</node>
	
	<node id="6" as="sensor">
		<for entity="static-pos" x="9" y="20" z="0" />
	</node>
	
	<node id="7" as="sensor">
		<for entity="static-pos" x="15" y="25" z="0" />
	</node>
</worldsens>